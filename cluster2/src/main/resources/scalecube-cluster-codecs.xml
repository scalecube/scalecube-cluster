<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<sbe:messageSchema xmlns:sbe="http://fixprotocol.io/2016/sbe"
  package="io.scalecube.cluster2.sbe"
  id="100"
  version="1"
  semanticVersion="5.2"
  description="Message Codecs for messages"
  byteOrder="littleEndian">

  <types>
    <type name="String64" length="64" primitiveType="char" characterEncoding="US-ASCII"/>

    <!-- Composite -->

    <composite name="messageHeader" description="Message identifiers and length of message root">
      <type name="blockLength" primitiveType="uint16"/>
      <type name="templateId" primitiveType="uint16"/>
      <type name="schemaId" primitiveType="uint16"/>
      <type name="version" primitiveType="uint16"/>
    </composite>

    <composite name="groupSizeEncoding" description="Repeating group dimensions">
      <type name="blockLength" primitiveType="uint16"/>
      <type name="numInGroup" primitiveType="uint16"/>
    </composite>

    <composite name="VarData">
      <type name="length" primitiveType="uint16" semanticType="Length"/>
      <type name="varData" length="0" primitiveType="uint8" semanticType="data"/>
    </composite>

    <composite name="String" description="Variable length ASCII String">
      <type name="length" primitiveType="uint16" semanticType="Length"/>
      <type name="varData" length="0" primitiveType="uint8" characterEncoding="US-ASCII"/>
    </composite>

    <composite name="UUID" description="Represents Java UUID type">
      <type name="mostSignificantBits" primitiveType="int64"/>
      <type name="leastSignificantBits" primitiveType="int64"/>
    </composite>

    <!-- Enums -->

    <enum name="MemberStatus" encodingType="int8">
      <validValue name="ALIVE">1</validValue>
      <validValue name="SUSPECTED">2</validValue>
      <validValue name="LEAVING">3</validValue>
      <validValue name="DEAD">4</validValue>
    </enum>

    <enum name="MembershipEventType" encodingType="int8">
      <validValue name="ADDED">1</validValue>
      <validValue name="REMOVED">2</validValue>
      <validValue name="LEAVING">3</validValue>
    </enum>
  </types>

  <sbe:message name="Member" id="10">
    <field name="id" id="1" type="UUID"/>
    <field name="address" id="2" type="String64"/>
  </sbe:message>

  <sbe:message name="AddMember" id="11">
    <data name="member" id="100" type="VarData"/>
  </sbe:message>

  <sbe:message name="RemoveMember" id="12">
    <data name="member" id="100" type="VarData"/>
  </sbe:message>

  <!-- Failure Detector -->

  <sbe:message name="Ping" id="100">
    <field name="period" id="1" type="int64"/>
    <data name="from" id="100" type="VarData"/>
    <data name="target" id="101" type="VarData"/>
    <data name="issuer" id="102" type="VarData"/>
  </sbe:message>

  <sbe:message name="PingRequest" id="101">
    <field name="period" id="1" type="int64"/>
    <data name="from" id="100" type="VarData"/>
    <data name="target" id="101" type="VarData"/>
    <data name="issuer" id="102" type="VarData"/>
  </sbe:message>

  <sbe:message name="PingAck" id="102">
    <field name="period" id="1" type="int64"/>
    <data name="from" id="100" type="VarData"/>
    <data name="target" id="101" type="VarData"/>
    <data name="issuer" id="102" type="VarData"/>
  </sbe:message>

  <sbe:message name="FailureDetectorEvent" id="103">
    <field name="status" id="1" type="MemberStatus"/>
    <data name="member" id="100" type="VarData"/>
  </sbe:message>

  <!-- Gossip -->

  <sbe:message name="Gossip" id="200">
    <field name="gossiperId" id="1" type="UUID"/>
    <field name="sequenceId" id="2" type="int64"/>
    <data name="message" id="101" type="VarData"/>
  </sbe:message>

  <sbe:message name="GossipRequest" id="201">
    <field name="from" id="1" type="UUID"/>
    <data name="gossip" id="100" type="VarData"/>
  </sbe:message>

  <sbe:message name="GossipOutputMessage" id="202">
    <data name="message" id="100" type="VarData"/>
  </sbe:message>

  <sbe:message name="GossipInputMessage" id="203">
    <data name="message" id="100" type="VarData"/>
  </sbe:message>

  <!-- Cluster Membership -->

  <sbe:message name="Sync" id="300">
    <field name="period" id="1" type="int64"/>
    <field name="from" id="2" type="String64"/>
    <data name="membershipRecord" id="100" type="VarData"/>
  </sbe:message>

  <sbe:message name="SyncAck" id="301">
    <field name="period" id="1" type="int64"/>
    <data name="membershipRecord" id="100" type="VarData"/>
  </sbe:message>

  <sbe:message name="MembershipRecord" id="302">
    <field name="incarnation" id="1" type="int32"/>
    <field name="payloadLength" id="3" type="int32"/>
    <field name="status" id="4" type="MemberStatus"/>
    <field name="alias" id="5" type="String64"/>
    <field name="namespace" id="6" type="String64"/>
    <data name="member" id="100" type="VarData"/>
  </sbe:message>

  <sbe:message name="MembershipEvent" id="303">
    <field name="type" id="1" type="MembershipEventType"/>
    <field name="timestamp" id="2" type="int64"/>
    <field name="alias" id="3" type="String64"/>
    <field name="namespace" id="4" type="String64"/>
    <data name="member" id="100" type="VarData"/>
    <data name="payload" id="101" type="VarData"/>
  </sbe:message>

  <!-- Payload Protocol -->

  <sbe:message name="PayloadGenerationHeader" id="400">
    <field name="memberId" id="1" type="UUID"/>
    <field name="payloadLength" id="2" type="int32"/>
    <field name="payloadOffset" id="3" type="int32"/>
  </sbe:message>

  <sbe:message name="PayloadGenerationEvent" id="401">
    <field name="memberId" id="1" type="UUID"/>
    <field name="payloadLength" id="2" type="int32"/>
  </sbe:message>

  <sbe:message name="PayloadChunkRequest" id="402">
    <field name="payloadOffset" id="1" type="int64"/>
    <data name="from" id="100" type="VarData"/>
  </sbe:message>

  <sbe:message name="PayloadChunkResponse" id="403">
    <field name="payloadOffset" id="1" type="int64"/>
    <data name="from" id="100" type="VarData"/>
    <data name="chunk" id="101" type="VarData"/>
  </sbe:message>

  <sbe:message name="PayloadEvent" id="404">
    <field name="memberId" id="1" type="UUID"/>
    <data name="payload" id="100" type="VarData"/>
  </sbe:message>

</sbe:messageSchema>
